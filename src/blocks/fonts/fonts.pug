include ./__item/fonts__item
mixin fonts
  ul.fonts-list
    +fonts-item("H1", "This one is the sub-section or widget title", "H1__text")
    +fonts-item("H2", "Next one is the item title inside widgets", "H2__text")
    +fonts-item("H3", "This is a label or CTA text", "H3__text")
    +fonts-item("Body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.", "body__text")